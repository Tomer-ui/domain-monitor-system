[Unit]
Description=Domain liveness check
After=network.target

[Service]
User=root
WorkingDirectory=/root/domain-monitor-system
ExecStart=/root/domain-monitor-system/_venv_/bin/python app.py
Restart=on-failure
RestartSec=5
Environment="PATH=/root/domain-monitor-system/_venv_/bin"
Environment="FLASK_ENV=production"
Environment="PYTHONUNBUFFERED=1"



[Install]
WantedBy=multi-user.target